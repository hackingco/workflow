# HackingCo Flow Framework Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=info

# Server Configuration
PORT=3000
HOST=localhost

# Langfuse Observability Configuration
# Get your keys from https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=your-public-key-here
LANGFUSE_SECRET_KEY=your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true
LANGFUSE_RELEASE=1.0.0
LANGFUSE_FLUSH_AT=15
LANGFUSE_FLUSH_INTERVAL=10000
LANGFUSE_REQUEST_TIMEOUT=10000
LANGFUSE_MAX_RETRIES=3

# User Context (for development/testing)
CURRENT_USER_ID=
CURRENT_SESSION_ID=

# Database Configuration (if needed)
DATABASE_URL=
DATABASE_POOL_SIZE=10

# Redis Configuration (if needed)
REDIS_URL=
REDIS_PASSWORD=

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Security
JWT_SECRET=
ENCRYPTION_KEY=

# External Services
API_KEY=
WEBHOOK_SECRET=

# Feature Flags
FEATURE_ADVANCED_TRACING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ERROR_TRACKING=true

# Monitoring Thresholds
PERFORMANCE_WARNING_THRESHOLD_MS=1000
MEMORY_WARNING_THRESHOLD_MB=512
CPU_WARNING_THRESHOLD_PERCENT=80