{
  "name": "@hackingco/flow-framework",
  "version": "1.0.0",
  "description": "Enterprise workflow automation and consulting framework by HackingCo",
  "author": {
    "name": "HackingCo Consulting LLC",
    "email": "dev@hackingco.com",
    "url": "https://hackingco.com"
  },
  "license": "PROPRIETARY",
  "private": true,
  "homepage": "https://github.com/hackingco/flow-framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hackingco/flow-framework.git"
  },
  "bugs": {
    "url": "https://github.com/hackingco/flow-framework/issues",
    "email": "support@hackingco.com"
  },
  "keywords": [
    "workflow",
    "automation",
    "enterprise",
    "consulting",
    "digital-transformation",
    "process-automation",
    "business-process",
    "hackingco"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "nodemon src/server.js",
    "build": "npm run build:prod",
    "build:prod": "NODE_ENV=production webpack --mode production",
    "build:ts": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "init:project": "node scripts/init-project.js",
    "create:workflow": "node scripts/create-workflow.js",
    "deploy:prod": "npm run build:prod && npm run deploy:aws",
    "deploy:aws": "node scripts/deploy-aws.js",
    "docs": "typedoc --out docs src",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "security:check": "npm audit && snyk test",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "example:traced": "ts-node examples/traced-workflow-example.ts",
    "observability:check": "ts-node -e \"import { langfuseClient } from './src/observability'; langfuseClient.initialize() && console.log('Langfuse connection:', langfuseClient.isEnabled() ? 'OK' : 'DISABLED')\"",
    "workflow:trace": "LANGFUSE_ENABLED=true npm run example:traced"
  },
  "dependencies": {
    "@hackingco/core": "^1.0.0",
    "@hackingco/workflow-engine": "^1.0.0",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "axios": "^1.4.0",
    "lodash": "^4.17.21",
    "winston": "^3.8.2",
    "dotenv": "^16.0.3",
    "langfuse": "^3.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/jest": "^29.5.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.13.3",
    "cypress": "^12.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "typedoc": "^0.24.7",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ]
  },
  "hackingco": {
    "brand": {
      "primaryColor": "#1E40AF",
      "secondaryColor": "#10B981",
      "accentColor": "#F59E0B"
    },
    "support": {
      "email": "support@hackingco.com",
      "phone": "1-800-HACK-PRO",
      "portal": "https://support.hackingco.com"
    }
  }
}